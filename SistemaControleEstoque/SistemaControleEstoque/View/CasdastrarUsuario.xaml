<Window x:Class="SistemaControleEstoque.View.CasdastrarUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaControleEstoque.View"
        mc:Ignorable="d"
        Title="CasdastrarUsuario" Height="250" Width="250">
    <Grid>
        <Label Content="Login:" HorizontalAlignment="Left" Margin="10,23,0,0" VerticalAlignment="Top"/>
        <Label Content="Senha:" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top" Height="31" Width="38"/>
        <Label Content="Confirmar:" HorizontalAlignment="Left" Margin="10,117,0,0" VerticalAlignment="Top" Width="39" Height="25"/>
        <TextBox x:Name="tbxLogin" HorizontalAlignment="Left" Height="26" Margin="89,23,-1,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="154"/>
        <PasswordBox x:Name="tbxSenha" HorizontalAlignment="Left" Margin="89,67,0,0" VerticalAlignment="Top" Height="30" Width="143"/>
        <PasswordBox x:Name="tbxConfirmar" HorizontalAlignment="Left" Margin="89,117,0,0" VerticalAlignment="Top" Width="143" Height="25"/>
        <Button Content="Cadastrar" HorizontalAlignment="Left" Margin="10,147,0,0" VerticalAlignment="Top" Width="222" Height="62" Click="Button_Click"/>

    </Grid>
</Window>
